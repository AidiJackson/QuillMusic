modules = ["nodejs-20", "web", "python-3.11"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["redis"]

# Single command to run both backend + frontend via root package.json
run = "bash start-production.sh"
entrypoint = "README.md"

# Environment variables for development
[env]
QUILLMUSIC_DEBUG = "true"

# -----------------------------
# Port mappings
# -----------------------------
# Frontend dev server (Vite) – exposed on the main webview URL
[[ports]]
localPort = 5000
externalPort = 80

# Backend (FastAPI) – exposed separately on port 8000 if you ever need it
[[ports]]
localPort = 8000
externalPort = 8000

# -----------------------------
# Deployment (for later – you can ignore this for now)
# -----------------------------
[deployment]
deploymentTarget = "vm"
run = ["bash", "start-production.sh"]
build = ["bash", "-c", "cd quillmusic/frontend && npm run build"]
