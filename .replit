modules = ["nodejs-20", "web", "python-3.11"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["redis"]

# When you click the big Run button, run the "Project" workflow
[workflows]
runButton = "Project"

# -----------------------------
# Project workflow: start backend + frontend in parallel
# -----------------------------
[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

# Start the backend (FastAPI + Redis) – console output
[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

# Start the frontend (Vite/React) – webview output
[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

# -----------------------------
# Backend workflow
# -----------------------------
[[workflows.workflow]]
name = "Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
# This script was created by the Replit Agent and runs:
#   redis-server --daemonize yes
#   cd quillmusic/backend
#   uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
args = "bash start-backend.sh"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

# -----------------------------
# Frontend workflow
# -----------------------------
[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd quillmusic/frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

# -----------------------------
# Port mappings
# -----------------------------
# Frontend dev server (Vite) – exposed on the main webview URL
[[ports]]
localPort = 5000
externalPort = 80

# Backend (FastAPI) – exposed separately on port 8000 if you ever need it
[[ports]]
localPort = 8000
externalPort = 8000

# -----------------------------
# Deployment (for later – you can ignore this for now)
# -----------------------------
[deployment]
deploymentTarget = "vm"
run = ["bash", "start-production.sh"]
build = ["bash", "-c", "cd quillmusic/frontend && npm run build"]
